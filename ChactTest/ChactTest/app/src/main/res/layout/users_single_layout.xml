<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_signle_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/kisi_varsayilan" />

    <TextView
        android:id="@+id/user_single_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/user_single_status"
        android:layout_alignTop="@+id/user_signle_image"
        android:text="@string/display_name"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/user_single_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_signle_image"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/user_signle_image"
        android:text="@string/user_default_status" />

    <ImageView
        android:id="@+id/user_single_online"
        android:layout_width="13dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/user_single_name"
        android:layout_alignEnd="@+id/user_single_status"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/user_single_name"
        app:srcCompat="@android:drawable/presence_online" />

</RelativeLayout>